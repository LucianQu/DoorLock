<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/func_out_linearlayout_style">

	<!-- start 头部标题 --> 
	<LinearLayout style="@style/func_title_linearlayout_style">
	    <TextView
	    	android:id="@+id/f_08_101_Title"
	        android:drawableLeft="@drawable/item006"
	        android:text="@string/func_08_101"
			style="@style/func_title_viewtext_style"/>
	</LinearLayout>  
	
	
    <!-- start 具体内布局 -->
    <FrameLayout
    	android:id="@+id/f_08_101_Frm"
		style="@style/func_framelayout_style">
    
		 <!-- start 具体内容 -->
		 <LinearLayout 
	        style="@style/func_linearlayout_style">
	        
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/common_line_height40"
			    >
			    <TextView
			        android:text="@string/func_08_101_item1"
			        style="@style/func_item_viewtext_style_100_a"/>
			    
			    <Spinner android:id="@+id/f_08_101_item1" 
				    style="@style/loopq_item_Spinner_style_220"/>
		    </LinearLayout>
		  
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/common_line_height40"
		    >
		    <TextView
		        android:text="@string/func_08_101_item2"
		    	style="@style/func_item_viewtext_style_100_a"/>
		    <!-- 新版本SDK要求填写属性lableFor,类似于填写一个ID来绑定这个控件，否则警告 -->
		    <EditText
				android:id="@+id/func_08_101_item02"  
				android:labelFor="@id/func_08_101_item02" 
			    style="@style/func_item_editnumber_style_200"/>
		</LinearLayout>
		
		<include layout="@layout/line1" />
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    >
		   <TextView 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:gravity="left"
		       android:layout_marginTop="3dp"
		       android:text="@string/func_08_101_item3"
		       android:textColor="#ff1493"
		       android:textSize="12sp"
		       />
		    <TextView 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:gravity="left"
		       android:text="@string/func_08_101_item4"
		       android:textColor="#ff1493"
		       android:textSize="12sp"
		       />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    >
		    <TextView
		        android:text="@string/func_08_101_item5"
		        style="@style/func_item_viewtext_style_160_b"/>
		    
		    <Spinner android:id="@+id/f_08_101_item5" 
			    style="@style/loopq_item_Spinner_style_100"/>
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/common_line_height30"
		    >
		    <TextView
		        android:text="@string/func_08_101_item6"
		        style="@style/func_item_viewtext_style_160_b"/>
		    <TextView
				android:id="@+id/func_08_101_item06"  
				android:labelFor="@id/func_08_101_item06" 
			    style="@style/func_item_edittext_style_120"/>
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/common_line_height30"
		    >
		    <TextView
		        android:text="@string/func_08_101_item7"
		        style="@style/func_item_viewtext_style_160_b"/>
		    <TextView
				android:id="@+id/func_08_101_item07"  
				android:labelFor="@id/func_08_101_item07" 
			    style="@style/func_item_edittext_style_120"/>
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/common_line_height30"
		    >
		    <TextView
		        android:text="@string/func_08_101_item8"
		        style="@style/func_item_viewtext_style_160_b"/>
		    <TextView
				android:id="@+id/func_08_101_item08"  
				android:labelFor="@id/func_08_101_item08" 
			    style="@style/func_item_edittext_style_120"/>
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/common_line_height30"
		    >
		    <TextView
		        android:text="@string/func_08_101_item9"
		        style="@style/func_item_viewtext_style_160_b"/>
		    <TextView
				android:id="@+id/func_08_101_item09"  
				android:labelFor="@id/func_08_101_item09" 
			    style="@style/func_item_edittext_style_120"/>
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/common_line_height30"
		    >
		    <TextView
		        android:text="@string/func_08_101_item10"
		        style="@style/func_item_viewtext_style_160_b"/>
		    <TextView
				android:id="@+id/func_08_101_item10"  
				android:labelFor="@id/func_08_101_item10" 
			    style="@style/func_item_edittext_style_120"/>
		</LinearLayout>
		
		 <include layout="@layout/show_btn_set_query" />
		 </LinearLayout>
	     
		 <!-- start 底部 -->
		 <LinearLayout 
	        android:id="@+id/f_08_101_Load"
	        style="@style/func_progressbar_linearlayout_style" >
		    <ProgressBar
		        style="@style/func_progressbar_style" />
		 </LinearLayout>
	</FrameLayout>
</LinearLayout>

