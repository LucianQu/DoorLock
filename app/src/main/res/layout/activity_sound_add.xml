<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:id="@+id/rly_content"
    android:background="#f7f7f7"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/top_rll"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/nav_height"
        >
        <TextView
            android:id="@+id/tv_left"
            android:textSize="16sp"
            android:textColor="@color/color_262626"
            android:gravity="center"
            android:padding="10dip"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/str_back"
            android:drawableLeft="@mipmap/ic_back_black"
            android:drawablePadding="5dip"
            android:layout_alignParentLeft="true"
            android:contentDescription="@null" />
        <TextView
            android:id="@+id/tv_title"
            android:textSize="18.0sp"
            android:textColor="@color/color_262626"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="80.0dip"
            android:layout_marginRight="80.0dip"
            android:maxLines="1"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_right"
            android:textSize="16.0sp"
            android:textColor="@color/color_262626"
            android:gravity="center"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@+id/iv_right"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:contentDescription="@null" />
        <View
            android:id="@+id/v_divider"
            android:background="@color/color_e5e5e5"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lly_step1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_rll">
        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="166dp"
            android:layout_height="230dp"
            android:layout_marginTop="60dip"
            android:src="@mipmap/ic_sound_gray"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null" />
        <ImageView
            android:id="@+id/iv_sound_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:layout_marginBottom="25.0dip"
            android:src="@mipmap/ic_sound_light"
            android:layout_alignRight="@id/iv_icon1"
            android:layout_alignBottom="@id/iv_icon1"
            android:contentDescription="@null" />
        <TextView
            android:id="@+id/tv_tips1"
            android:textSize="14.0sp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:text="@string/str_add_sound_step1_tips"
            android:lines="1"
            android:layout_below="@id/iv_icon1"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:layout_marginBottom="100.0dip"
            android:text="@string/str_next"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@style/style_btn_submit2" />
        <TextView
            android:id="@+id/tv_instruction1"
            android:textSize="14.0sp"
            android:textColor="@color/color_666666"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:text="@string/str_add_sound_step1_instruction"
            android:lines="1"
            android:layout_above="@id/tv_submit"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lly_step2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_rll">
        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-120dp"
            android:src="@mipmap/ic_camera_network_config"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null" />
        <TextView
            android:id="@+id/tv_submit2"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:layout_marginBottom="100.0dip"
            android:text="@string/str_configure"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@style/style_btn_submit2" />
        <TextView
            android:id="@+id/tv_instruction2"
            android:textSize="18.0sp"
            android:textColor="@color/color_2f2f2f"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30.0dip"
            android:text="@string/str_add_sound_step2_instruction"
            android:lines="1"
            android:layout_above="@id/tv_submit2"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lly_step3"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="50.0dip"
        android:paddingRight="50.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_rll">
        <TextView
            android:id="@+id/tv_instruction3"
            android:textSize="18.0sp"
            android:textColor="@color/color_2f2f2f"
            android:gravity="left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:text="@string/str_add_sound_step3_instruction" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/common_bg_dfdfdf_5"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="20.0dip">
            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="40.0dip"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wifi" />
            <com.blg.rtu.frmFunction.view.ClearableEditText
                android:id="@+id/et_account"
                android:textSize="13.0sp"
                android:textColor="@color/color_212a32"
                android:textColorHint="@color/color_909090"
                android:background="@null"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:hint="@string/str_wifi_hint"
                android:layout_weight="1.0"
                android:textCursorDrawable="@null" />
            <TextView
                android:id="@+id/tv_wifis"
                android:textSize="13.0sp"
                android:textColor="@color/color_666666"
                android:gravity="center"
                android:layout_width="60.0dip"
                android:layout_height="fill_parent"
                android:text="@string/str_wifis" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lly_pwd"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/common_bg_dfdfdf_5"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="15.0dip">
            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="40.0dip"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_pwd" />
            <com.blg.rtu.frmFunction.view.ClearableEditText
                android:id="@+id/et_pwd"
                android:textSize="13.0sp"
                android:textColor="@color/color_212a32"
                android:textColorHint="@color/color_909090"
                android:background="@null"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:hint="@string/str_pwd_hint2"
                android:drawableLeft="@mipmap/ic_pwd"
                android:textCursorDrawable="@null" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_submit3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80.0dip"
            android:text="@string/str_start_configure"
            style="@style/style_btn_submit2" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lly_step4"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="50.0dip"
        android:paddingRight="50.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_rll">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/common_bg_dfdfdf_5"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip">
            <TextView
                android:textSize="13.0sp"
                android:textColor="@color/color_212a32"
                android:layout_width="60.0dip"
                android:layout_height="wrap_content"
                android:text="@string/str_device_name" />
            <com.blg.rtu.frmFunction.view.ClearableEditText
                android:id="@+id/et_device_name"
                android:textSize="13.0sp"
                android:textColor="@color/color_212a32"
                android:textColorHint="@color/color_909090"
                android:background="@null"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:hint="@string/str_device_name_hint"
                android:textCursorDrawable="@null" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lly_room"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/common_bg_dfdfdf_5"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip">
            <TextView
                android:textSize="13.0sp"
                android:textColor="@color/color_212a32"
                android:layout_width="60.0dip"
                android:layout_height="wrap_content"
                android:text="@string/str_select_room" />
            <TextView
                android:id="@+id/tv_select_room"
                android:textSize="13.0sp"
                android:textColor="@color/color_212a32"
                android:background="@null"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:hint="@string/str_select_room_tips"
                android:drawableRight="@mipmap/ic_arrow_right" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_submit4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80.0dip"
            android:text="@string/str_save"
            style="@style/style_btn_submit2" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lly_wifi"
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="300.0dip"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16.0sp"
                android:textColor="@color/color_767e8a"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="44.0dip"
                android:text="@string/str_select_wifi_tips"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/tv_refresh"
                android:textSize="14.0sp"
                android:textColor="@color/color_767e8a"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="44.0dip"
                android:layout_marginRight="15.0dip"
                android:text="@string/str_refresh"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <View
            android:background="@color/color_e5e5e5"
            android:layout_width="fill_parent"
            android:layout_height="1.0px" />
        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/color_e5e5e5"
            android:dividerHeight="1.0px" />
    </LinearLayout>

    <!--倒计时-->
    <LinearLayout
        android:id="@+id/lly_count_down"
        android:gravity="center"
        android:background="@color/color_60000000"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_rll">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/common_bg_ffffff_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textColor="@color/color_f18f00"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.0dip"
                android:text="@string/str_internet_configing" />
            <com.blg.rtu.frmFunction.view.CountDownProgress
                android:id="@+id/pro_countDown"
                android:padding="20.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginBottom="30.0dip"
                android:layout_centerInParent="true" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>