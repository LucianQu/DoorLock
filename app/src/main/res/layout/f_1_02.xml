<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="#f0eff5"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<!--操作门选择-->
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_marginTop="2dp"
		android:layout_marginLeft="6dp"
		android:layout_marginRight="6dp"
		android:background="@drawable/border"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="操作门选择"
			android:textSize="@dimen/tx18sp"
			android:textColor="#262626"
			android:textStyle="bold"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_marginTop="6dp"
			android:gravity="left|center_vertical"
			android:layout_height="wrap_content">
			<Spinner
				android:id="@+id/spinner_doorList"
				android:layout_width="150dp"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="26dp"
				android:background="@drawable/border0"
				android:layout_height="30dp">
			</Spinner>
			<ImageView
				android:layout_width="12dp"
				android:layout_height="12dp"
				android:layout_marginLeft="-20dp"
				android:src="@mipmap/ic_down_more_gray"/>
		</LinearLayout>
	</LinearLayout>
	<!--门控制-->
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_marginTop="2dp"
		android:layout_marginLeft="6dp"
		android:layout_marginRight="6dp"
		android:background="@drawable/border"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="功能开关1"
			android:textSize="@dimen/tx18sp"
			android:textColor="#262626"
			android:textStyle="bold"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_marginTop="6dp"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_open1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@mipmap/btn_gray"
					android:textSize="@dimen/tx16sp"
					android:textColor="#ffffff"
					android:text="开"
					android:gravity="center"/>
				<ProgressBar
					android:id="@+id/pb_open1"
					android:visibility="invisible"
					style="?android:attr/progressBarStyleSmall"
					android:layout_gravity="center"
					android:layout_width="20dp"
					android:layout_height="20dp" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_close1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@mipmap/btn_gray"
					android:textSize="@dimen/tx16sp"
					android:textColor="#ffffff"
					android:text="关"
					android:gravity="center"/>
				<ProgressBar
					android:id="@+id/pb_close1"
					android:visibility="invisible"
					style="?android:attr/progressBarStyleSmall"
					android:layout_gravity="center"
					android:layout_width="20dp"
					android:layout_height="20dp" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_stop1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@mipmap/btn_gray"
					android:textSize="@dimen/tx16sp"
					android:textColor="#ffffff"
					android:text="停"
					android:gravity="center"/>
				<ProgressBar
					android:id="@+id/pb_stop1"
					android:visibility="invisible"
					style="?android:attr/progressBarStyleSmall"
					android:layout_gravity="center"
					android:layout_width="20dp"
					android:layout_height="20dp" />
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>
	<!--功能开关2-->
	<!--门控制-->
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_marginTop="2dp"
		android:layout_marginLeft="6dp"
		android:layout_marginRight="6dp"
		android:background="@drawable/border"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:text="功能开关2"
			android:textSize="@dimen/tx18sp"
			android:textColor="#262626"
			android:textStyle="bold"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_marginTop="6dp"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_open2"
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:background="@mipmap/btn_gray"
					android:textSize="@dimen/tx16sp"
					android:textColor="#ffffff"
					android:text="开"
					android:gravity="center"/>
				<ProgressBar
					android:id="@+id/pb_open2"
					android:visibility="invisible"
					style="?android:attr/progressBarStyleSmall"
					android:layout_gravity="center"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_close2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@mipmap/btn_gray"
					android:textSize="@dimen/tx16sp"
					android:textColor="#ffffff"
					android:text="关"
					android:gravity="center"/>
				<ProgressBar
					android:id="@+id/pb_close2"
					android:visibility="invisible"
					style="?android:attr/progressBarStyleSmall"
					android:layout_gravity="center"
					android:layout_width="20dp"
					android:layout_height="20dp" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/tv_stop2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@mipmap/btn_gray"
					android:textSize="@dimen/tx16sp"
					android:textColor="#ffffff"
					android:text="停"
					android:gravity="center"/>
				<ProgressBar
					android:id="@+id/pb_stop2"
					android:visibility="invisible"
					style="?android:attr/progressBarStyleSmall"
					android:layout_gravity="center"
					android:layout_width="20dp"
					android:layout_height="20dp" />
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>
</LinearLayout>

