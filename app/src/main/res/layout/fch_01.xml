<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0.01dp"
    android:layout_gravity="center_vertical"
    android:focusableInTouchMode="true" >
 	
 	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="@drawable/border0"
	    >
			<TextView
		        android:id="@+id/tcpConnectStatus"
		        android:layout_width="80dp" 
		        android:layout_height="match_parent" 
		        android:gravity="center_vertical"
		        android:drawablePadding="5dp"
	        	android:layout_marginLeft="5dp"
	        	android:layout_marginRight="8dp"
		        android:drawableLeft="@drawable/label"
		        android:textSize="@dimen/text15"
		        android:visibility="gone"
		        />
			<TextView
		        android:layout_width="80dp" 
		        android:layout_height="match_parent" 
		        android:gravity="center_vertical"
		        android:drawablePadding="5dp"
	        	android:layout_marginLeft="5dp"
	        	android:layout_marginRight="8dp"
		        android:drawableLeft="@drawable/label"
		        android:text="@string/commandParam"
		        android:textSize="@dimen/text15"
		        />
			<ImageView android:id="@+id/asOut"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="4dp"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:background="@drawable/as_out" 
	            android:focusable="false" 
	            android:contentDescription="@string/image_description"/> 

			<ImageView android:id="@+id/asIn"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="8dp"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:background="@drawable/as_in" 
	            android:focusable="false" 
	            android:contentDescription="@string/image_description"/>    
            <ProgressBar
		    	android:id="@+id/paramProgress"
		    	style="@style/func_progressbar_style"  
		        android:layout_width="25dp"
		        android:layout_height="25dp"
			    android:layout_marginLeft="2dp"
	            android:layout_gravity="center_vertical|center_horizontal"
		    	android:visibility="gone"/>
						
		<!-- </LinearLayout>	    --> 
 	</LinearLayout>
</LinearLayout>

