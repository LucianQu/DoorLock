<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/image_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_jiankong1"
        android:scaleType="fitCenter" >
    </ImageView>
    
    <LinearLayout
        android:id="@+id/login_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dip"
            android:background="@drawable/input_bg" >

            <ImageView
                android:id="@+id/iv_appicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_user" />

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_appicon"
                android:textSize="15sp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/account_no"
                android:singleLine="true"
                android:maxLines="1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/input_bg"
            android:layout_margin="5dip" >

            <ImageView
                android:id="@+id/iv_appicon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_psw" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_appicon1"
                android:background="@null"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:hint="@string/account_psw"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000" >
            </EditText>
        </RelativeLayout>
    </LinearLayout>
