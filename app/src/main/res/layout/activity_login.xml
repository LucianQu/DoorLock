<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6EF"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/image_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/dl2"
        android:scaleType="fitCenter" >
    </ImageView>
    
    <LinearLayout
        android:id="@+id/login_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dip"
            android:background="@drawable/input_bg" >

            <ImageView
                android:id="@+id/iv_appicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_user" />

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_appicon"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/account_no"
                android:singleLine="true"
                android:maxLines="1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_bg"
            android:layout_margin="5dip" >

            <ImageView
                android:id="@+id/iv_appicon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_psw" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_appicon1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/account_psw"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000" >
            </EditText>
        </RelativeLayout>
    </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:orientation="horizontal"
       >
<!--        
       <CheckBox
         android:id="@+id/cb_save"
         android:layout_width="0dp"
         android:layout_height="40dp"
         android:layout_weight="1"
         android:layout_gravity="right"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
         android:drawablePadding="10dp"
         android:drawableLeft="@drawable/item_selector"
         android:button="@null"
         android:layout_marginTop="10dp"
         android:gravity="center_vertical"
         android:text="@string/save_psw"
         android:textColor="#808080"
         android:textSize="16sp" /> -->
     
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
			android:text="@string/connect_type"
			android:gravity="center_vertical"
			android:textSize="14sp"
			android:textColor="#808080"/>
		 <Spinner 
		    android:id="@+id/connect_type" 
			android:layout_width="120dp"
			android:layout_height="40dp"
			android:background="@android:color/transparent"
			android:layout_marginRight = "5dp"
			/>
   </LinearLayout>
	
   	<Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="40dip"
        android:background="#0b8de3"
        android:padding="10dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="20sp" />
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dip"
        android:gravity="bottom"
        android:layout_marginBottom="20dip"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:text="@string/copyright"
            android:textColor="#303030">
        </TextView>
        <TextView
            android:id="@+id/tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:text="@string/connect"            
            android:textColor="#303030">
        </TextView>
    </LinearLayout>
</LinearLayout>