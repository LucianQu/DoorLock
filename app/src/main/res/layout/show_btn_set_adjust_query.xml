<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="left|center_horizontal|center_vertical"  
    >
	<LinearLayout 
	    android:layout_width="@dimen/layout_width_126"
	    android:layout_height="match_parent"
	    android:paddingLeft="4dp"
	    android:gravity="left|center_vertical"  
	    android:orientation="vertical"
	    >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="14dp"
	        android:gravity="center_vertical"
	        android:layout_gravity="left|center_vertical"
	        android:drawableLeft="@drawable/arrow2"
	        android:drawablePadding="5dp"
	        android:textColor="@color/orange"
	        android:text="@string/result_datetime"
	        android:textSize="@dimen/text12" />
	    <TextView
	        android:id="@+id/resultDatetime"
	        android:layout_width="wrap_content"
	        android:layout_height="14dp"
	        android:gravity="center_vertical"
	        android:layout_gravity="left|center_vertical"
	        android:paddingLeft="25dp"
	        android:textColor="@color/red"
	        android:textSize="@dimen/text12" />
	</LinearLayout>	

	<ImageView 
        android:id="@+id/btn_set"
        android:layout_width="@dimen/img_btn_layout_width_35"
        android:layout_height="@dimen/img_btn_layout_height_35"
        android:src="@drawable/btn_ball_1"
        android:contentDescription="@string/txtBtn"/>
	<ImageView 
        android:id="@+id/btn_adjust"
        android:layout_width="@dimen/img_btn_layout_width_35"
        android:layout_height="@dimen/img_btn_layout_height_35"
        android:layout_marginLeft="@dimen/layoutMarginLeft_20"
        android:src="@drawable/btn_ball_4"
        android:contentDescription="@string/txtBtn"/>
    <ImageView 
        android:id="@+id/btn_read"
        android:layout_width="@dimen/img_btn_layout_width_35"
        android:layout_height="@dimen/img_btn_layout_height_35"
        android:layout_marginLeft="@dimen/layoutMarginLeft_20"
        android:src="@drawable/btn_ball_2"
        android:contentDescription="@string/txtBtn"/>
</LinearLayout>	
