<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/func_out_linearlayout_style">

	<!-- start 头部标题 --> 
	<LinearLayout style="@style/func_title_linearlayout_style">
	    <TextView
	    	android:id="@+id/f_01_100_Title"
	        android:drawableLeft="@drawable/item001"
	        android:text="@string/func_01_100"
			style="@style/func_title_viewtext_style"/>
	</LinearLayout>  
	
	
    <!-- start 具体内布局 -->
    <FrameLayout
    	android:id="@+id/f_01_100_Frm"
		style="@style/func_framelayout_style">
    
		 <!-- start 具体内容 -->
		 <LinearLayout 
	        style="@style/func_linearlayout_style">
	        
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/common_line_height40"
			    >
			    <TextView
			        android:text="@string/func_01_100_item3"
			        style="@style/func_item_viewtext_style_100_a"/>
			    
			    <Spinner android:id="@+id/f_01_100_item3" 
				    style="@style/loopq_item_Spinner_style_220"/>

		    </LinearLayout>
		     
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/common_line_height40"
			    >
			    <TextView
			        android:text="@string/func_01_100_item1"
			    	style="@style/func_item_viewtext_style_100_a"/>
			    <!-- 新版本SDK要求填写属性lableFor,类似于填写一个ID来绑定这个控件，否则警告 -->
			    <EditText
					android:id="@+id/func_01_100_item01"  
					android:labelFor="@id/func_01_100_item01" 
				    style="@style/func_item_editnumber_style_200"/>
			</LinearLayout>
	        
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/common_line_height40"
			    >
			    <TextView
			        android:text="@string/func_01_100_item2"
			        style="@style/func_item_viewtext_style_100_a"/>
			    <!-- 新版本SDK要求填写属性lableFor,类似于填写一个ID来绑定这个控件，否则警告 -->
			    <EditText
					android:id="@+id/func_01_100_item02"  
					android:labelFor="@id/func_01_100_item02" 
				    style="@style/func_item_editnumber_style_200"/>
			</LinearLayout>
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/common_line_height40"
			    >
			    <TextView
			        android:text="@string/func_01_100_item4"
			        style="@style/func_item_viewtext_style_100_a"/>
			    <!-- 新版本SDK要求填写属性lableFor,类似于填写一个ID来绑定这个控件，否则警告 -->
			    <EditText
					android:id="@+id/func_01_100_item04"  
					android:labelFor="@id/func_01_100_item04" 
				    style="@style/func_item_editnumber_style_200"/>
			</LinearLayout>
			
		 <include layout="@layout/show_btn_set_query" />
		 </LinearLayout>
	     
		 <!-- start 底部 -->
		 <LinearLayout 
	        android:id="@+id/f_01_100_Load"
	        style="@style/func_progressbar_linearlayout_style" >
		    <ProgressBar
		        style="@style/func_progressbar_style" />
		 </LinearLayout>
	</FrameLayout>
</LinearLayout>

