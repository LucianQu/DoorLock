<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/func_out_linearlayout_style" 
	>

	<!-- start 头部标题 --> 
	<LinearLayout 
	    style="@style/func_title_linearlayout_style"
	    >
	    <TextView
	    	android:id="@+id/f_06_030_Title"
	        android:drawableLeft="@drawable/item007"
	        android:text="@string/func_06_030"
			style="@style/func_title_viewtext_style"/>
	</LinearLayout>  
	
    
	<!-- start 具体内布局 -->
    <FrameLayout
    	android:id="@+id/f_06_030_Frm"
		style="@style/func_framelayout_style">
    
		 <!-- start 具体内容 -->
		 <LinearLayout 
	        style="@style/func_linearlayout_style">
	        
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/common_line_height40"
			    >
			    <TextView
			        android:text="@string/func_06_030_item1"
			        style="@style/func_item_viewtext_style_100_a"/>
			    
			    <Spinner android:id="@+id/f_06_030_item1" 
				    style="@style/func_item_Spinner_style_100"/>

			</LinearLayout>
	        
		    <include layout="@layout/show_btn_set_query" />
		 </LinearLayout>
	     
		 <!-- start 底部 -->
		 <LinearLayout 
	        android:id="@+id/f_06_030_Load"
	        style="@style/func_progressbar_linearlayout_style" >
		    <ProgressBar
		        style="@style/func_progressbar_style" />
		 </LinearLayout>
	</FrameLayout>
</LinearLayout>

