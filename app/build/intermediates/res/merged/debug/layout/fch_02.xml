<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0.01dp"
    android:layout_gravity="center_vertical"
    android:focusableInTouchMode="true" 
    android:orientation="vertical">


	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="@drawable/border0"
		android:orientation="horizontal" 
	    >

		<TextView 
		    android:layout_width="80dp" 
		    android:layout_height="match_parent" 
		    android:gravity="center_vertical"
	        android:drawableLeft="@drawable/label"
	        android:drawablePadding="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="8dp"
		    android:text="@string/txtAutoQuery" 
	        android:textSize="@dimen/text14" />
		
		<LinearLayout 
            android:layout_weight="1" 
            android:layout_width="0dip"
		    android:layout_height="match_parent"
			android:orientation="horizontal" 
		    >
			<ImageView android:id="@+id/aqStart"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="4dp"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:background="@drawable/aq_start" 
	            android:focusable="false" 
	            android:contentDescription="@string/image_description"/>    
	    </LinearLayout>		
			
		<LinearLayout 
            android:layout_weight="1" 
            android:layout_width="0dip"
		    android:layout_height="match_parent"
			android:orientation="horizontal" 
		    >
			<ImageView android:id="@+id/aqPause"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="4dp"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:background="@drawable/aq_pause" 
	            android:focusable="false" 
	            android:contentDescription="@string/image_description"/>    
	    </LinearLayout>		
			
		<LinearLayout 
            android:layout_weight="1" 
            android:layout_width="0dip"
		    android:layout_height="match_parent"
			android:orientation="horizontal" 
		    >
			<ImageView android:id="@+id/aqResume"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="4dp"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:background="@drawable/aq_resume" 
	            android:focusable="false" 
	            android:contentDescription="@string/image_description"/>    
	    </LinearLayout>		
			
		<LinearLayout 
            android:layout_weight="1" 
            android:layout_width="0dip"
		    android:layout_height="match_parent"
			android:orientation="horizontal" 
		    >
			<ImageView android:id="@+id/aqStop"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="4dp"
	            android:layout_gravity="center_vertical|center_horizontal"
	            android:background="@drawable/aq_stop" 
	            android:focusable="false" 
	            android:contentDescription="@string/image_description"/>    
	    </LinearLayout>		
							

		<TextView android:id="@+id/aqStatus"
		    android:layout_width="50dp" 
		    android:layout_height="match_parent" 
		    android:gravity="center_vertical"
		    android:text="@string/txtStop" 
	        android:textSize="@dimen/text14" />
						
	</LinearLayout>
</LinearLayout>

